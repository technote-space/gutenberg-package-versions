{
  "name": "technote/gutenberg-package-versions",
  "type": "library",
  "license": "GPL-2.0+",
  "description": "gutenberg package versions",
  "homepage": "https://github.com/technote-space/gutenberg-package-versions",
  "keywords": [
    "wordpress",
    "gutenberg"
  ],
  "authors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "homepage": "https://technote.space"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "autoload": {
    "psr-4": {
      "Technote\\": "src/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*",
    "phpmd/phpmd": "^2.8",
    "phpcompatibility/phpcompatibility-wp": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0 || ^0.6.0 || ^0.7.0",
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^4.8 || ^5.7 || ^7.5"
  },
  "scripts": {
    "setup": [
      "@prepare"
    ],
    "prepare": [
      "@prepare:php"
    ],
    "prepare:php": [
      "composer install --no-interaction --prefer-dist --no-suggest"
    ],
    "test": [
      "@stage-lint",
      "@stage-test"
    ],
    "stage-lint": [
      "@phpcs",
      "@phpmd"
    ],
    "stage-test": [
      "@bin:wp-test-p2"
    ],
    "phpcs": [
      "phpcs --standard=./phpcs.xml"
    ],
    "phpmd": [
      "phpmd ./src/,./tests/ ansi phpmd.xml"
    ],
    "phpunit": [
      "phpunit --stop-on-failure --colors=always"
    ],
    "phpunit:no": [
      "@phpunit --no-coverage"
    ],
    "bin:wp-test": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./ci-helper/bin/php/wp-test.sh",
    "bin:wp-test-p1": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ACTIVATE_POPULAR_PLUGINS=1 ./ci-helper/bin/php/wp-test.sh",
    "bin:wp-test-p2": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ACTIVATE_POPULAR_PLUGINS=1 ACTIVATE_GUTENBERG=1 ./ci-helper/bin/php/wp-test.sh",
    "bin:phpcs": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./ci-helper/bin/php/phpcs.sh",
    "bin:phpmd": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./ci-helper/bin/php/phpmd.sh",
    "bin:js-lint": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./ci-helper/bin/js/js-lint.sh",
    "bin:js-test": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./ci-helper/bin/js/js-test.sh",
    "bin:test": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) GITHUB_REPOSITORY=technote-space/gutenberg-package-versions RELEASE_TITLE=v1.2.3 RELEASE_TAG=v1.2.3 bash ./ci-helper/bin/test.sh",
    "bin:test-p1": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) GITHUB_REPOSITORY=technote-space/gutenberg-package-versions RELEASE_TITLE=v1.2.3 RELEASE_TAG=v1.2.3 ACTIVATE_POPULAR_PLUGINS=1 bash ./ci-helper/bin/test.sh",
    "bin:test-p2": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) GITHUB_REPOSITORY=technote-space/gutenberg-package-versions RELEASE_TITLE=v1.2.3 RELEASE_TAG=v1.2.3 ACTIVATE_POPULAR_PLUGINS=1 ACTIVATE_GUTENBERG=1 bash ./ci-helper/bin/test.sh",
    "bin:download": [
      "mkdir -p ./ci-helper/.git",
      "chmod -R +w ./ci-helper/.git && rm -rdf ./ci-helper",
      "rm -f ./tests/bootstrap.php ./.coveralls.yml ./phpcs.xml ./phpmd.xml phpunit.xml",
      "git clone --depth=1 https://github.com/wp-content-framework/ci-helper.git ci-helper"
    ],
    "bin:prepare": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ACTIVATE_POPULAR_PLUGINS=1 bash ./ci-helper/bin/prepare.sh",
    "bin:fetch": [
      "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./bin/update.sh"
    ],
    "bin:gh-release": [
      "rm -f ./data.zip && RELEASE_FILE=data.zip TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./bin/deploy/create-zip.sh"
    ],
    "bin:gh-pages": [
      "rm -rdf ./gh-pages && TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) GITHUB_REPOSITORY=technote-space/gutenberg-package-versions ./bin/deploy/gh-pages.sh"
    ]
  },
  "config": {
    "process-timeout": 1200,
    "platform": {
      "php": "5.6"
    }
  }
}
